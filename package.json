{
  "name": "polyburg-terminal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev": "pnpm --parallel dev:backend dev:web",
    "build": "pnpm --filter @polyburg/shared build && pnpm --recursive --filter '!@polyburg/shared' build",
    "lint": "pnpm --recursive lint",
    "format": "pnpm exec prettier --check .",
    "format:fix": "pnpm exec prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
